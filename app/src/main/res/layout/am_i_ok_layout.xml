<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/am_i_ok_text"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/test_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Test Name"
        android:imeOptions="actionDone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/result_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/test_name_editText"
        android:layout_alignRight="@+id/test_name_editText"
        android:layout_below="@+id/test_name_editText"
        android:layout_centerHorizontal="true"
        android:hint="Result"
        android:imeOptions="actionDone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/blood_text_category_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_editText"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/blood_test_category_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test_result_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/blood_text_category_textView"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>